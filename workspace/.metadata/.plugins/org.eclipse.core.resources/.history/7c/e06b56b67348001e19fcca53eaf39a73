package exam;
import java.util.Scanner;
public class Exam {


	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        
	        // 변수 선언 및 초기화
	        String defaultSchoolName = "Jejuelementary";
	        String defaultGrade = "6";
	        String newName;
	        String newGrade;
	        
	        // 초기 변수 출력
	        System.out.println(defaultGrade + " grade in " + defaultSchoolName.toLowerCase() + " school");
	        
	        // 사용자 입력 받기
	        System.out.print("20자 이하의 새로운 학교명을 입력하세요 : ");
	        newName = scanner.nextLine();
	        
	        if (newName.length() > 20) {
	            System.out.println("학교명은 20자 이하로 입력해주세요.");
	            scanner.close();
	            return;
	        }
	        
	        System.out.print("새로운 학년을 입력하세요: ");
	        newGrade = scanner.nextLine();
	        
	        // 결과 출력
	        System.out.println(newGrade + " grade in " + newName.toLowerCase() + " school");
	        
	        scanner.close();
	   


	       
	
	    }
}


